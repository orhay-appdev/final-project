<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All playlists
    </h1>

    <a href="/playlists/new" class="btn btn-block btn-outline-secondary">
      Add a new playlist
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          User
        </th>

        <th>
          Playlist name
        </th>

        <th>
          Spotify playlist
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @playlists.each do |playlist| %>
      <tr>
        <td>
          <%= playlist.id %>
        </td>

        <td>
          <%= playlist.description %>
        </td>

        <td>
          <%= playlist.user_id %>
        </td>

        <td>
          <%= playlist.playlist_name %>
        </td>

        <td>
          <%= playlist.spotify_playlist_id %>
        </td>

        <td>
          <%= time_ago_in_words(playlist.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(playlist.updated_at) %> ago
        </td>

        <td>
          <a href="/playlists/<%= playlist.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
