<!-- Validation failure messages -->
<% if @songs_for_activity.present? %>
  <% if @songs_for_activity.errors.any? %>
    <% @songs_for_activity.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new songs for activity
</h1>


<hr>

<form action="/create_songs_for_activity" method="post">

  <div class="form-group">
    <label for="song_id">
      Song
    </label>

    <input type="text" id="song_id" name="song_id" class="form-control" value="<%= @songs_for_activity.song_id %>">
  </div>

  <div class="form-group">
    <label for="activity_id">
      Activity
    </label>

    <input type="text" id="activity_id" name="activity_id" class="form-control" value="<%= @songs_for_activity.activity_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create songs for activity
  </button>
</form>

<hr>

<a href="/songs_for_activities">
  Go back
</a>
